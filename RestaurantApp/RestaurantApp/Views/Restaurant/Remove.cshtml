<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var restaurant in ViewBag.restaurants)
    {
        <input type="checkbox" name="restaurantIds" id="@restaurant.RestaurantId" value="@restaurant.RestaurantId" />
        <label for="@restaurant.RestaurantId">@restaurant.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selecte Restaurants" />
</form>