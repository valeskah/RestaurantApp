<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var restaurant in ViewBag.restaurants)
    {
        <input type="checkbox" name="restaurantIds" id="@restaurant.ID" value="@restaurant.ID" />
        <label for="@restaurant.ID">@restaurant.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Restaurants" />
</form>