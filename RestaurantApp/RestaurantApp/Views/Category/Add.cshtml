@model RestaurantApp.ViewModels.AddCategoryViewModel

<h2>Add Category</h2>

<form asp-controller="Category" asp-action="Add" method="post">
    <table>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><input type="submit" value="Add Category" /></td>
        </tr>
    </table>
</form>
